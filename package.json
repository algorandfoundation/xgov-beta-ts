{
  "name": "@algorandfoundation/xgov",
  "version": "1.0.0-canary.2",
  "type": "module",
  "description": "xGov Beta Smart Contract Clients",
  "repository": "git@github.com:algorandfoundation/xgov-beta-ts.git",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./council": {
      "types": "./lib/generated/CouncilClient.d.ts",
      "default": "./lib/generated/CouncilClient.js"
    },
    "./proposal": {
      "types": "./lib/generated/ProposalClient.d.ts",
      "default": "./lib/generated/ProposalClient.js"
    },
    "./registry": {
      "types": "./lib/generated/XGovRegistryClient.d.ts",
      "default": "./lib/generated/XGovRegistryClient.js"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build:only": "rm -rf lib/ && tsc",
    "build": "rm -rf lib/ && npm run generate && tsc",
    "generate": "concurrently 'npm run generate:council' 'npm run generate:proposal' 'npm run generate:registry' 'npm run generate:ghostkitreader'",
    "generate:council": "npx @algorandfoundation/algokit-client-generator generate -o src/generated/CouncilClient.ts -a contract/smart_contracts/artifacts/council/Council.arc56.json",
    "generate:proposal": "npx @algorandfoundation/algokit-client-generator generate -o src/generated/ProposalClient.ts -a contract/smart_contracts/artifacts/proposal/Proposal.arc56.json",
    "generate:registry": "npx @algorandfoundation/algokit-client-generator generate -o src/generated/XGovRegistryClient.ts -a contract/smart_contracts/artifacts/xgov_registry/XGovRegistry.arc56.json",
    "generate:ghostkitreader": "cd ghostkit-reader && npm run build && npx ghostkit build smart_contracts/artifacts/xgov_reader/XgovReader.arc56.json && cp smart_contracts/artifacts/xgov_reader/XgovReaderSDK.ts ../src/generated/XgovReaderGhostSDK.ts"
  },
  "author": "Algorand Foundation",
  "license": "AGPL-3.0-or-later",
  "peerDependencies": {
    "@algorandfoundation/algokit-utils": "9.2.0",
    "algosdk": "3.5.2"
  },
  "devDependencies": {
    "@algorandfoundation/algokit-client-generator": "6.0.1",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.4",
    "semantic-release": "^24.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): xGov Clients \n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false
        }
      ]
    ],
    "branches": [
      "release/*",
      {
        "name": "main",
        "prerelease": "canary"
      }
    ]
  }
}
