{
  "name": "@algorandfoundation/xgov",
  "version": "3.1.0-beta.3",
  "type": "module",
  "description": "xGov Beta Smart Contract Clients",
  "repository": "git@github.com:algorandfoundation/xgov-beta-ts.git",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/ProposalClient.d.ts",
      "default": "./dist/ProposalClient.js"
    },
    "./council": {
      "types": "./dist/CouncilClient.d.ts",
      "default": "./dist/CouncilClient.js"
    },
    "./proposal": {
      "types": "./dist/ProposalClient.d.ts",
      "default": "./dist/ProposalClient.js"
    },
    "./registry": {
      "types": "./dist/XGovRegistryClient.d.ts",
      "default": "./dist/XGovRegistryClient.js"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "npm run generate && tsc",
    "generate": "npm run generate:council && npm run generate:proposal && npm run generate:registry",
    "generate:council": "npx @algorandfoundation/algokit-client-generator generate -o src/CouncilClient.ts -a contract/smart_contracts/artifacts/council/Council.arc56.json",
    "generate:proposal": "npx @algorandfoundation/algokit-client-generator generate -o src/ProposalClient.ts -a contract/smart_contracts/artifacts/proposal/Proposal.arc56.json",
    "generate:registry": "npx @algorandfoundation/algokit-client-generator generate -o src/XGovRegistryClient.ts -a contract/smart_contracts/artifacts/xgov_registry/XGovRegistry.arc56.json"
  },
  "author": "Algorand Foundation",
  "license": "AGPL-3.0-or-later",
  "peerDependencies": {
    "@algorandfoundation/algokit-utils": "9.2.0",
    "algosdk": "3.5.2"
  },
  "devDependencies": {
    "@algorandfoundation/algokit-client-generator": "6.0.1",
    "@types/node": "^22.10.1",
    "typescript": "^5.5.4",
    "semantic-release": "^24.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): xGov Clients \n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false
        }
      ]
    ],
    "branches": [
      "release/*",
      {
        "name": "main",
        "prerelease": "canary"
      }
    ]
  }
}
